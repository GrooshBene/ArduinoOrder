<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorActionBarText</item>
        <item name="android:textColorPrimary">@color/colorActionBarText</item>
        <item name="drawerArrowStyle">@style/myTheme.DrawerArrowToggle</item>
    </style>

    <style name="myTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorActionBarText</item>
    </style>

</resources>
